<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="8dp"
    tools:context=".MainActivity">

    <!-- Display Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:background="#1E1E1E"
        android:padding="12dp"
        android:elevation="8dp">

        <!-- Previous Calculation -->
        <TextView
            android:id="@+id/txtPreviousCalculation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:gravity="end"
            android:paddingBottom="2dp" />

        <!-- Current Display -->
        <EditText
            android:id="@+id/txtDisplay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/etZero"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:background="@null"
            android:gravity="end"
            android:inputType="none"
            android:cursorVisible="false"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Calc btn -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:columnCount="5"
        android:rowCount="6"
        android:alignmentMode="alignBounds">

        <!-- Row 1: MC, MR, MS, M+, M- -->
        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/MC"
            android:textSize="12sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnMR"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/MR"
            android:textSize="12sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnMS"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/MS"
            android:textSize="12sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/Mplus"
            android:textSize="12sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnMMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/Mminus"
            android:textSize="12sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <!-- Row 2: CE, DEL -->
        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/CE"
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnDEL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/delete"
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <!-- Row 3: 7, 8, 9, /, % -->
        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/n7"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/n8"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/n9"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/Dalinti"
            android:textSize="16sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="4"
            android:text="@string/procent"
            android:textSize="16sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <!-- Row 4: 4, 5, 6, *, 1/x -->
        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/n4"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/n5"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/n6"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/Multiply"
            android:textSize="16sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnOneX"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="4"
            android:text="@string/oneX"
            android:textSize="14sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <!-- Row 5: 1, 2, 3, - -->
        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/n1"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/n2"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/n3"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="4"
            android:layout_column="3"
            android:text="@string/Minus"
            android:textSize="16sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <!-- Row 6: 0, ., + -->
        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/n0"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="5"
            android:layout_column="2"
            android:text="@string/dot"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="5"
            android:layout_column="3"
            android:text="@string/Plus"
            android:textSize="16sp"
            android:textColor="#4ECDC4"
            android:background="#3C3C52"
            android:textAllCaps="false"
            android:gravity="center" />

        <!-- Eq btn -->
        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:layout_row="4"
            android:layout_column="4"
            android:text="@string/Eq"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#4ECDC4"
            android:textAllCaps="false"
            android:gravity="center" />

    </GridLayout>

</LinearLayout>